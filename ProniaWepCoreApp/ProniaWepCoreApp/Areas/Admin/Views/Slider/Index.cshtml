@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<!-- Table Start -->
<a asp-controller="Slider" asp-action="Create" class="btn btn-primary" >Add</a>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Imagex</th>
                            <th scope="col">DiscountPercent</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><img style="width:50px" src="~/upload/@item.Image"></td>
                                <td>@item.DiscountPercent</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                <a asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary" >Edit</a>
                                </td>
                                <td>
                                <a asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<!-- Table End -->
